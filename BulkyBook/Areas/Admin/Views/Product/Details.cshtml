@model BulkyBook.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Product";
}


<div class="row p-3 border">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (Model.Id != 0)
    {
        title = "Edit Product";
        <input type="hidden" asp-for="Id" />
    }
    <div class="col-12 border-bottom">
        <h2 class="text-primary">@title</h2>
    </div>
    <div class="col-8 pt-4">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Title"></label>
            </div>
            <div class="col-8">
                <span asp-validation-for="Title" class="text-danger">@Model.Title</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-8">
                <span asp-validation-for="ISBN" class="text-danger">@Model.ISBN</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Author"></label>
            </div>
            <div class="col-8">
                <span asp-validation-for="Author" class="text-danger">@Model.Author</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
                <span asp-validation-for="Author" class="text-danger">@Model.Description</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ListPrice"></label>
            </div>
            <div class="col-8">
                <span asp-validation-for="ListPrice" class="text-danger">@Model.ListPrice</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Price"></label>
            </div>
            <div class="col-8">
                <span asp-validation-for="Price" class="text-danger">@Model.Price</span>
            </div>
        </div>
    </div>
    @if (Model.Id != 0)
    {
        <div class="col-3 offset-1 pt-4">
            <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    }
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });


        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please select an image", "error");
                return false;
            }
            return true;
        }
    </script>
 }